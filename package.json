{
  "name": "@hhenrichsen/canvas-commons",
  "description": "Common utilities for working with Motion Canvas",
  "repository": "https://github.com/hhenrichsen/canvas-commons",
  "version": "0.8.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build:dev": "rollup -c rollup.config.mjs",
    "watch": "rollup -c rollup.config.mjs -w",
    "build": "rollup -c rollup.config.mjs",
    "prebuild": "rimraf ./lib",
    "lint-staged": "lint-staged",
    "lint": "npm run eslint && npm run prettier",
    "format": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "eslint \"**/*.ts?(x)\"",
    "eslint:fix": "eslint --fix \"**/*.ts?(x)\"",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "serve": "vite"
  },
  "peerDependencies": {
    "@motion-canvas/2d": "^3.15.2",
    "@motion-canvas/core": "^3.15.2"
  },
  "dependencies": {
    "@codemirror/language": "^6.10.1",
    "@lezer/highlight": "^1.2.0",
    "@motion-canvas/ffmpeg": "^1.1.1"
  },
  "devDependencies": {
    "@motion-canvas/ui": "^3.15.2",
    "@motion-canvas/vite-plugin": "^3.15.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@lezer/javascript": "^1.4.16",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.13.0",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-node-externals": "^7.0.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.2",
    "vite": "^4.0.0",
    "vite-tsconfig-paths": "^4.3.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --fix",
    "*.{js,jsx,ts,tsx,md,scss,json,mjs}": "prettier --write"
  }
}
